@page "/category/{**path}"
@page "/categories/{**path}"
@page "/tag/{**path}"
@page "/tags/{**path}"
@using Humanizer;

<PageTitle>
	@BreadCrumbService.GetText()
</PageTitle>

<MudContainer Class="py-4 py-sm-8 py-md-12 py-lg-16 py-xl-20">
	<MudGrid>
		@if (Blocks != null) {
			@foreach (var item in Blocks) {
				<MudItem xs="12" md="6" lg="4">
					<MudBlocks.Site.Components.CardBlock Block="@item" />
				</MudItem>
			}
		}
	</MudGrid>
</MudContainer>
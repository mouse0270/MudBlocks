		<MudSkeleton Animation="Animation.False" SkeletonType="SkeletonType.Rectangle" Height="50px" Width="160px" Style="border-radius: var(--mud-default-borderradius);" />
		<MudSkeleton Animation="Animation.False" SkeletonType="SkeletonType.Rectangle" Height="50px" Width="160px" Style="border-radius: var(--mud-default-borderradius);" />
	</MudStack>

	<!-- Featured In Section -->
	<MudContainer MaxWidth="MaxWidth.Medium" Class="text-center">
		<MudStack Spacing="2" Row="true" Justify="Justify.Center" AlignItems="AlignItems.Center" Class="mt-8">
			<MudSkeleton Animation="Animation.False" SkeletonType="SkeletonType.Circle" Height="40px" Width="40px" />
			<MudSkeleton Animation="Animation.False" SkeletonType="SkeletonType.Circle" Height="40px" Width="40px" />
			<MudSkeleton Animation="Animation.False" SkeletonType="SkeletonType.Circle" Height="40px" Width="40px" />
		</MudStack>

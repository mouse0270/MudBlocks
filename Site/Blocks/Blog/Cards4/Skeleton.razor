<MudContainer Style="align-content: center; height: 100vh;">
    <MudGrid>
		<MudItem xs="12" Style="justify-items: center;">
			<MudSkeleton Animation="Animation.False" Class="mb-2" Height="42px" Width="180px"/>
			<MudSkeleton Animation="Animation.False" Class="mb-4" Height="20px" Width="60%"/>
		</MudItem>
		<MudItem xs="12" md="6">
			<MudCard>
				<MudCardContent>
					<MudStack AlignItems="AlignItems.Center" Justify="Justify.SpaceBetween" Row="true" Class="mb-5 text-gray-500">
						<MudSkeleton Animation="Animation.False" Height="28px" Width="80px" Style="border-radius: 12px"/>
						<MudSkeleton Animation="Animation.False" Height="20px" Width="75px" />
					</MudStack>
					<MudSkeleton Animation="Animation.False" Class="mb-2" Height="32px" Width="60%"/>
					<MudSkeleton Animation="Animation.False" Class="mb-1" Height="20px" Width="100%"/>
					<MudSkeleton Animation="Animation.False" Class="mb-1" Height="20px" Width="100%"/>
					<MudSkeleton Animation="Animation.False" Height="20px" Width="100%"/>				</MudCardContent>
				<MudCardActions>
					<MudStack AlignItems="AlignItems.Center" Justify="Justify.SpaceAround" Row="true">
						<MudSkeleton Animation="Animation.False" SkeletonType="SkeletonType.Circle" Height="40px" Width="40px" />
						<MudSkeleton Animation="Animation.False" Height="30px" Width="80px"/>
					</MudStack>
					<MudSpacer />
					<MudSkeleton Animation="Animation.False" Height="36px" Width="130px"/>
				</MudCardActions>
			</MudCard>
		</MudItem>
		<MudItem xs="12" md="6">
			<MudCard>
				<MudCardContent>
					<MudStack AlignItems="AlignItems.Center" Justify="Justify.SpaceBetween" Row="true" Class="mb-5 text-gray-500">
						<MudSkeleton Animation="Animation.False" Height="28px" Width="80px" Style="border-radius: 12px"/>
						<MudSkeleton Animation="Animation.False" Height="20px" Width="75px" />
					</MudStack>
					<MudSkeleton Animation="Animation.False" Class="mb-2" Height="32px" Width="60%"/>
					<MudSkeleton Animation="Animation.False" Class="mb-1" Height="20px" Width="100%"/>
					<MudSkeleton Animation="Animation.False" Class="mb-1" Height="20px" Width="100%"/>
					<MudSkeleton Animation="Animation.False" Height="20px" Width="100%"/>				</MudCardContent>
				<MudCardActions>
					<MudStack AlignItems="AlignItems.Center" Justify="Justify.SpaceAround" Row="true">
						<MudSkeleton Animation="Animation.False" SkeletonType="SkeletonType.Circle" Height="40px" Width="40px" />
						<MudSkeleton Animation="Animation.False" Height="30px" Width="80px"/>
					</MudStack>
					<MudSpacer />
					<MudSkeleton Animation="Animation.False" Height="36px" Width="130px"/>
				</MudCardActions>
			</MudCard>
		</MudItem>
    </MudGrid>
</MudContainer>
